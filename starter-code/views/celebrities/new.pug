extends ../layout

block content 

  a(href="/") HOME
  h2 Create a NEW Celeb
  form(action="/celebrities" method="POST")
    div
      label(for="name") Name: 
      input(id="name" type="text" name="name")
    div
      label(for="occupation") Occupation:
      input(id="occupation" type="text" name="occupation")
    div
      label(for="catchPhrase") Phrase:
      input(id="catchPhrase" type="text" name="catchPhrase")        
    button(type="submit") Create New